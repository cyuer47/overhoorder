/* Material 3 "expressive" inspired styles (light) - compact */
:root {
  --primary: #6750a4;
  --on-primary: #ffffff;
  --primary-container: #eaddff;
  --on-primary-container: #21005e;
  --surface: #fffbfe;
  --on-surface: #1c1b1f;
  --surface-variant: #e7e0ec;
  --on-surface-variant: #49454f;
  --outline: #79747e;
  --error: #b3261e;
  --on-error: #ffffff;
  --radius-xl: 20px;
  --shadow-1: 0 1px 2px rgba(0, 0, 0, 0.08), 0 2px 6px rgba(0, 0, 0, 0.06);
  --shadow-2: 0 6px 16px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(0, 0, 0, 0.06);
}
* {
  box-sizing: border-box;
}
html,
body {
  margin: 0;
  padding: 0;
  font-family: Inter, system-ui, Segoe UI, Roboto, Arial, sans-serif;
  background: linear-gradient(135deg, #f5f2ff, #ffe6f1);
  min-height: 100%;
  color: var(--on-surface);
}
.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 24px;
}
.app-title {
  font-size: clamp(28px, 4vw, 40px);
  font-weight: 800;
  color: #2b225c;
  margin: 8px 0 16px;
}
.card {
  background: var(--surface);
  border-radius: var(--radius-xl);
  border: 1px solid rgba(0, 0, 0, 0.06);
  box-shadow: var(--shadow-1);
  padding: 20px;
  transition: all 0.3s;
}
.chip {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  border-radius: 999px;
  background: var(--primary-container);
  color: var(--on-primary-container);
  font-weight: 600;
}
.helper {
  color: var(--on-surface-variant);
  font-size: 13px;
}
.btn-primary {
  background: var(--primary);
  color: var(--on-primary);
  border: none;
  padding: 10px 14px;
  border-radius: 14px;
  font-weight: 700;
  text-decoration: none;
}
.btn-secondary {
  background: var(--primary-container);
  color: var(--on-primary-container);
  padding: 8px 12px;
  border-radius: 12px;
  text-decoration: none;
}
.btn-text {
  background: transparent;
  color: var(--primary);
  padding: 6px 8px;
  border-radius: 10px;
  transition: all 0.3s;
}
.btn-danger {
  background: var(--error);
  color: var(--on-error);
  padding: 8px 12px;
  border-radius: 12px;
  text-decoration: none;
}
.table {
  width: 100%;
  border-collapse: collapse;
}
.table th {
  font-size: 12px;
  text-align: left;
  padding: 8px 12px;
  color: var(--on-surface-variant);
}
.table td {
  background: #fff;
  padding: 10px;
  border-top: 1px solid #eee;
}
.badge {
  display: inline-block;
  padding: 6px 10px;
  border-radius: 999px;
  background: #d1fadf;
  color: #065f46;
  font-size: 12px;
  font-weight: 700;
}
input,
select,
textarea {
  width: 100%;
  padding: 10px;
  border-radius: 12px;
  border: 1px solid var(--surface-variant);
  background: #fff;
}
#students-list-container {
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

/* View Transitions - global setup */
@media (prefers-reduced-motion: no-preference) {
  /* Cross-document transitions of the whole page */
  html {
    view-transition-name: root;
  }

  /* Default fade/slide timings for entering and leaving pages */
  ::view-transition-old(root) {
    animation: vt-fade-out 180ms ease-out both;
  }
  ::view-transition-new(root) {
    animation: vt-fade-in 220ms ease-in both;
  }

  /* Shared element transitions (match by name across pages) */
  .chip {
    view-transition-name: badge;
  }
  .app-title {
    view-transition-name: title;
  }
  .logo-transition,
  .illustration img {
    view-transition-name: logo;
  }
  .card {
    view-transition-name: card;
  }
}

@keyframes vt-fade-in {
  from {
    opacity: 0;
    transform: translateY(6px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
@keyframes vt-fade-out {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(-6px);
  }
}
